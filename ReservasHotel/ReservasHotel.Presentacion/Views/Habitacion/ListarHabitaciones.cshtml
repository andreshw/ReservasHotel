@model IEnumerable<ReservasHotel.Persistencia.Entidades.Habitacion>

@{
    ViewBag.Title = "ListarHabitaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListarHabitaciones</h2>

<p>
    @Html.ActionLink("Crear Habitacion", "CrearHabitacion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroHabitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoHabitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TieneVistaMarBien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroHabitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoHabitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TieneVistaMarBien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarHabitacion", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
