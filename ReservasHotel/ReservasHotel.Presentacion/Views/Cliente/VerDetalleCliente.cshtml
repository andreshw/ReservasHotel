        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Crear Reserva", "CrearReserva", "Reserva", new { idCliente = Model.Id }, null) |
    @Html.ActionLink("Regresar a la busqueda", "Index")
</p>

<table class="table">
    <tr>
        <th>
            Inicio Reserva
        </th>
        <th>
            Fin Reserva
        </th>
    </tr>

    @foreach (var item in Model.Reservas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FerchaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
        </tr>
    }

</table>

